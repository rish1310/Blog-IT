<%- include("partials/header.ejs") %>

    <div class="row g-5">
        <div class="col-md-8">


            <h1 class="display-3">
                <%= blog.title %>
            </h1>
            <p class="blog-post-meta">
                <%= blog.date %> by <a href="#">
                        <%= blog.author %>
                    </a>

            </p>

            <hr>

            <p>
                <%= blog.body %>
            </p>
            <a href="/edit/<%= encodeURIComponent(blog.title) %>" class="edit-button" name="editBlog"
                value="<%= blog._id %>">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen"
                    viewBox="0 0 16 16">
                    <path
                        d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z" />
                </svg> Edit</a>
            <form action="/blogs/<%= encodeURIComponent(blog.title) %>?_method=DELETE" method="POST"
                class="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="delete-button" name="deleteBlog" value="<%= blog._id %>"><svg
                        xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                        class="bi bi-trash3" viewBox="0 0 16 16">
                        <path
                            d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5" />
                    </svg> Delete</button>
            </form>

        </div>

        <div class="col-md-4">
            <div class="position-sticky" style="top: 2rem; padding-top: 20px;">

                <div class="post">
                    <h4 class="fst-italic">Recent posts</h4>
                    <ul class="list-unstyled">
                        <% for(let i=blogs.length-1;i>blogs.length-7&&i>-1;i--) {%>

                            <li>
                                <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top"
                                    href="/blogs/<%= blogs[i].title %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="" fill="currentColor"
                                        class="bi bi-journals" viewBox="0 0 16 16">
                                        <path
                                            d="M5 0h8a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2 2 2 0 0 1-2 2H3a2 2 0 0 1-2-2h1a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1H1a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v9a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H5a1 1 0 0 0-1 1H3a2 2 0 0 1 2-2" />
                                        <path
                                            d="M1 6v-.5a.5.5 0 0 1 1 0V6h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V9h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 2.5v.5H.5a.5.5 0 0 0 0 1h2a.5.5 0 0 0 0-1H2v-.5a.5.5 0 0 0-1 0" />
                                    </svg>
                                    <div class="col-lg-8">
                                        <h6 class="mb-0">
                                            <%= blogs[i].title %>
                                        </h6>
                                        <small class="text-body-secondary">
                                            <%= blogs[i].body.substr(0,20)%> ...
                                        </small>
                                    </div>
                                </a>
                            </li>
                            <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>