<%- include('partials/header.ejs') %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card bg-light">
                    <div class="card-body">
                        <h1 class="text-center mb-4">Sign In</h1>
                        <form action="/login" method="POST">
                            <% if (typeof messages !=='undefined' && messages.error) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= messages.error %>
                                </div>
                                <% } %>
                                    <div class="mb-3">
                                        <input type="email" class="form-control" name="username" placeholder="Email"
                                            required>
                                    </div>
                                    <div class="mb-3">
                                        <input type="password" class="form-control" name="password"
                                            placeholder="Password" required>
                                    </div>
                                    <button type="submit" class="account-btn btn btn-dark w-100 mb-3">Sign In</button>
                                    <p class="text-center mb-3 text-secondary">Or you can sign in with:</p>
                                    <a href="/auth/google" class="btn w-100 account-btn">
                                        <svg version="1.1" xmlns="http://www.w3.org/2000/svg" width="18" height=""
                                            class="mb-1" viewBox="0 0 48 48">
                                            <g>
                                                <path fill="#EA4335"
                                                    d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z">
                                                </path>
                                                <path fill="#4285F4"
                                                    d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z">
                                                </path>
                                                <path fill="#FBBC05"
                                                    d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z">
                                                </path>
                                                <path fill="#34A853"
                                                    d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z">
                                                </path>
                                                <path fill="none" d="M0 0h48v48H0z"></path>
                                            </g>
                                        </svg> Sign In with Google
                                    </a>
                        </form>
                    </div>
                </div>
                <div class="text-center mt-3">
                    <p>Don't have an account? <a
                            class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover"
                            href="/register">Register</a></p>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>